    "version": "0.2.0",
    "configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/dist/index.js",
            "cwd": "${workspaceFolder}",
            "args": ["-f","test\\test.mak"],
            //"args": ["--print-directory"],
            "sourceMaps": true,
            "smartStep": true,
            "preLaunchTask": "npm: build",
			"console": "integratedTerminal",
		},
        {
            "type": "node",
            "request": "launch",
            "name": "Test make",
            "runtimeExecutable": "ts-node",
            "cwd": "${workspaceFolder}/test",
            "args": ["test.ts"],
            "sourceMaps": true,
            "preLaunchTask": "npm: build",
			"console": "integratedTerminal"
        }
    ]
}