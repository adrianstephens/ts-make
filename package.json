{
  "name": "@isopodlabs/make",
  "version": "0.4.0",
  "description": "A package for reading and running makefiles with TypeScript.",
  "main": "dist/index.js",
  "bin": {
    "make": "dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianstephens/ts-make.git"
  },
  "keywords": [
    "makefile",
    "parser",
    "gnu make",
    "build",
    "typescript",
    "nodejs"
  ],
  "author": "Adrian Stephens",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.8",
    "eslint": "^9.21.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
